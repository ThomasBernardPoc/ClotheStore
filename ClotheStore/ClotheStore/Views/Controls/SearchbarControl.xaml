<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Commons="clr-namespace:ClotheStore.Commons"
             x:Class="ClotheStore.Views.Controls.SearchbarControl">
    <Frame
        BackgroundColor="#50000000"
        CornerRadius="5"
        Padding="0">
        <StackLayout Orientation="Horizontal" Spacing="20" Padding="20, 5">
            <Label
                VerticalTextAlignment="Center"
                TextColor="{StaticResource White}"
                Text="{Static Commons:Constants.Search}"
                FontFamily="{Static Commons:Constants.IconFont}" />
            <Entry
                BackgroundColor="Transparent"
                Margin="0"
                PlaceholderColor="{StaticResource White}"
                Placeholder="What are you looking for ?"
                TextColor="{StaticResource White}"/>
        </StackLayout>
    </Frame>
</ContentView>