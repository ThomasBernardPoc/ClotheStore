<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClotheStore"
             xmlns:DataTemplates="clr-namespace:ClotheStore.Views.DataTemplates"
             x:Class="ClotheStore.App">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplates:RecommendationDataTemplate x:Key="RecommendationDataTemplate"/>
            <DataTemplates:CategoryDataTemplate x:Key="CategoryDataTemplate"/>
            <DataTemplates:TrendingDataTemplate x:Key="TrendingDataTemplate"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
